generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id           Int    @default(autoincrement()) @id
username  String  @unique 
email String @unique
password String
img String
isAdmin Boolean @default(false)
isActive Boolean @default(true)
phone String
address String
createdAt DateTime @default(now())
updatedAt DateTime  @updatedAt

}
model Product{
    id           Int    @default(autoincrement()) @id

  title String @unique
  desc String 
  price Int 
  img String
  stock Int
  color String 
  size String
  createdAt DateTime @default(now())

  updatedAt DateTime  @updatedAt

}